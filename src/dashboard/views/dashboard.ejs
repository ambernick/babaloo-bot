<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Babaloo Bot Dashboard</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      color: #333;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 20px;
    }

    header {
      background: white;
      padding: 20px;
      border-radius: 10px;
      margin-bottom: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .user-info {
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .avatar {
      width: 50px;
      height: 50px;
      border-radius: 50%;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-bottom: 20px;
    }

    .stat-card {
      background: white;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s;
    }

    .stat-card:hover {
      transform: translateY(-5px);
    }

    .stat-card h3 {
      color: #667eea;
      font-size: 14px;
      text-transform: uppercase;
      margin-bottom: 10px;
    }

    .stat-value {
      font-size: 32px;
      font-weight: bold;
      color: #333;
    }

    .stat-label {
      font-size: 14px;
      color: #666;
      margin-top: 5px;
    }

    .progress-bar {
      width: 100%;
      height: 10px;
      background: #e0e0e0;
      border-radius: 5px;
      overflow: hidden;
      margin-top: 10px;
    }

    .progress-fill {
      height: 100%;
      background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
      transition: width 0.3s ease;
    }

    .content-section {
      background: white;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }

    .content-section h2 {
      color: #667eea;
      margin-bottom: 20px;
      border-bottom: 2px solid #667eea;
      padding-bottom: 10px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th, td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #e0e0e0;
    }

    th {
      background: #f5f5f5;
      font-weight: 600;
      color: #667eea;
    }

    .btn {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
      font-size: 14px;
      transition: opacity 0.2s;
    }

    .btn:hover {
      opacity: 0.9;
    }

    .achievement {
      display: flex;
      align-items: center;
      gap: 15px;
      padding: 15px;
      background: #f9f9f9;
      border-radius: 8px;
      margin-bottom: 10px;
    }

    .achievement.completed {
      background: #e8f5e9;
      border-left: 4px solid #4caf50;
    }

    .achievement-icon {
      font-size: 32px;
    }

    .loading {
      text-align: center;
      padding: 40px;
      color: #666;
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <div class="user-info">
        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" 
             alt="Avatar" class="avatar">
        <div>
          <h2><%= user.username %></h2>
          <p style="color: #666; font-size: 14px;">User Dashboard</p>
        </div>
      </div>
      <a href="/logout" class="btn">Logout</a>
    </header>

    <div class="stats-grid">
      <div class="stat-card">
        <h3>ü™ô Currency</h3>
        <div class="stat-value"><%= dbUser.currency.toLocaleString() %></div>
        <div class="stat-label">Total Coins</div>
      </div>

      <div class="stat-card">
        <h3>üíé Premium Currency</h3>
        <div class="stat-value"><%= dbUser.premium_currency %></div>
        <div class="stat-label">Gems</div>
      </div>

      <div class="stat-card">
        <h3>‚≠ê Level</h3>
        <div class="stat-value"><%= dbUser.level %></div>
        <div class="stat-label"><%= dbUser.xp.toLocaleString() %> Total XP</div>
        <% 
          const xpForCurrent = (dbUser.level - 1) ** 2 * 100;
          const xpForNext = dbUser.level ** 2 * 100;
          const xpProgress = dbUser.xp - xpForCurrent;
          const xpNeeded = xpForNext - xpForCurrent;
          const progressPercent = Math.round((xpProgress / xpNeeded) * 100);
        %>
        <div class="progress-bar">
          <div class="progress-fill" style="width: <%= progressPercent %>%"></div>
        </div>
        <div class="stat-label" style="margin-top: 5px;">
          <%= xpProgress.toLocaleString() %> / <%= xpNeeded.toLocaleString() %> XP to Level <%= dbUser.level + 1 %>
        </div>
      </div>

      <div class="stat-card">
        <h3>üèÜ Achievements</h3>
        <div class="stat-value" id="achievement-count">-</div>
        <div class="stat-label">Unlocked</div>
      </div>
    </div>

    <div class="content-section">
      <h2>Recent Transactions</h2>
      <div id="transactions-list" class="loading">Loading transactions...</div>
    </div>

    <div class="content-section">
      <h2>Achievements Progress</h2>
      <div id="achievements-list" class="loading">Loading achievements...</div>
    </div>
  </div>

  <script>
    // Fetch user data
    const userId = '<%= user.id %>';

    // Load transactions
    fetch(`/api/user/${userId}/transactions?limit=10`)
      .then(res => res.json())
      .then(data => {
        const container = document.getElementById('transactions-list');
        
        if (data.length === 0) {
          container.innerHTML = '<p>No transactions yet. Start chatting to earn currency!</p>';
          return;
        }

        const table = `
          <table>
            <thead>
              <tr>
                <th>Type</th>
                <th>Category</th>
                <th>Amount</th>
                <th>Description</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              ${data.map(t => `
                <tr>
                  <td>${t.type === 'earn' ? '‚ûï' : '‚ûñ'} ${t.type}</td>
                  <td>${t.category}</td>
                  <td style="color: ${t.type === 'earn' ? 'green' : 'red'}">
                    ${t.type === 'earn' ? '+' : '-'}${t.amount}
                  </td>
                  <td>${t.description || '-'}</td>
                  <td>${new Date(t.created_at).toLocaleDateString()}</td>
                </tr>
              `).join('')}
            </tbody>
          </table>
        `;
        container.innerHTML = table;
      })
      .catch(err => {
        console.error(err);
        document.getElementById('transactions-list').innerHTML = 
          '<p style="color: red;">Error loading transactions</p>';
      });

    // Load achievements
    fetch(`/api/user/${userId}/achievements`)
      .then(res => res.json())
      .then(data => {
        const container = document.getElementById('achievements-list');
        const completed = data.filter(a => a.completed_at).length;
        
        document.getElementById('achievement-count').textContent = 
          `${completed} / ${data.length}`;

        const html = data.map(ach => `
          <div class="achievement ${ach.completed_at ? 'completed' : ''}">
            <div class="achievement-icon">
              ${ach.completed_at ? '‚úÖ' : '‚≠ï'}
            </div>
            <div style="flex: 1;">
              <strong>${ach.name}</strong>
              <p style="color: #666; font-size: 14px; margin-top: 5px;">
                ${ach.description}
              </p>
              ${ach.completed_at ? 
                `<p style="color: #4caf50; font-size: 12px; margin-top: 5px;">
                  Completed ${new Date(ach.completed_at).toLocaleDateString()}
                </p>` : ''}
            </div>
            <div style="text-align: right;">
              ${ach.reward_currency > 0 ? `<div>ü™ô ${ach.reward_currency}</div>` : ''}
              ${ach.reward_xp > 0 ? `<div>‚≠ê ${ach.reward_xp} XP</div>` : ''}
            </div>
          </div>
        `).join('');

        container.innerHTML = html;
      })
      .catch(err => {
        console.error(err);
        document.getElementById('achievements-list').innerHTML = 
          '<p style="color: red;">Error loading achievements</p>';
      });
  </script>
</body>
</html>